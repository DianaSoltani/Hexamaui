<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:hex ="clr-namespace:HexamauiAppSample"
             x:Class="HexamauiAppSample.MainPage">
    <ContentPage.Resources>
        <hex:HexagonBorder x:Key="HexagonBorder"/>
    </ContentPage.Resources>

    <!-- https://learn.microsoft.com/en-us/dotnet/maui/user-interface/layouts/?view=net-maui-8.0#absolutelayout -->
    <AbsoluteLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">

        <hex:HexagonBorder x:Name="borderTest">
            <hex:HexagonBorder.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </hex:HexagonBorder.GestureRecognizers>
        </hex:HexagonBorder>
    </AbsoluteLayout>

</ContentPage>
